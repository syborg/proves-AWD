<div class="cart-title">Your Pragmatic Cart</div>
<table>
 <% @cart.items.each do |item| %>
  <tr>
    <td><%= h item.quantity %> &times; </td> 
    <td><%= h item.title %></td>
    <td class="item-price"> <%= number_to_currency(item.price, :format=>"%n %u", :unit=>'€') %> </td>
  </tr>
 <% end %>
  <tr class="total-line">
  
    <td colspan="2">Total</td>
    <td class="total-cell"><%= number_to_currency(@cart.total_price, :format=>"%n %u", :unit=>'€') %> </td>
  </tr>
</table>
<%= button_to 'Empty cart', :action=>'empty_cart' %>

